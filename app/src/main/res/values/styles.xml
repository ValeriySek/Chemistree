<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/deep_purple_400</item>-->
<!--        <item name="colorPrimaryDark">#222232</item>-->
<!--        <item name="colorAccent">@color/deep_purple_400</item>-->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">#222232</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">#2E2D43</item>
        <item name="android:colorBackground">#2E2D43</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:colorControlActivated">@color/deep_purple_200</item>
        <item name="colorOnSurface">#FFFFFF</item>
<!--        <item name="android:statusBarColor">#282828</item>-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

<!--        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>-->
    </style>

    <style name="SelectableItemTheme">
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.Shrine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>


    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="CustomRVButtons" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/mb_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/mb_smoke_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="MendTableItemDesc">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">@dimen/mend_table_item_desc_padding_bottom</item>
        <item name="android:paddingStart">@dimen/mend_table_item_desc_padding_start</item>
        <item name="android:paddingEnd">@dimen/mend_table_item_desc_padding_end</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>



    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="android:textColorHint">#939393</item>
<!--        <item name="hintTextColor">#D87D4A</item>-->
        <item name="hintTextColor">@color/deep_purple_200</item>
        <item name="startIconTint">#939393</item>
        <item name="endIconTint">#939393</item>
    </style>

    <style name="Widget.App.EditText" parent="">
    </style>

</resources>
